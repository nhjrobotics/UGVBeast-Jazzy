<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
 <!-- THIS DEFINES HOW GAZEBO INTERACTS WITH ROBOT URDF -->
    <gazebo>
        <!-- Content will go here! -->
        <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
            <!-- Wheel Information -->
            <left_joint>left_up_sim_wheel_joint</left_joint>
            <left_joint>left_down_sim_wheel_joint</left_joint>
            <right_joint>right_up_sim_wheel_joint</right_joint>
            <right_joint>right_down_sim_wheel_joint</right_joint>

            <wheel_separation>0.123821989</wheel_separation>
            <wheel_radius>0.012425</wheel_radius>

            <publish_odom>true</publish_odom>
            <odom_topic>odom</odom_topic>
            <tf_topic>tf</tf_topic>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>

            <odom_publish_frequency>50</odom_publish_frequency>
            <topic>cmd_vel</topic>
            <frame_id>odom</frame_id>
            <child_frame_id>base_link</child_frame_id>
        </plugin>

        <plugin filename='gz-sim-joint-state-publisher-system' name='gz::sim::systems::JointStatePublisher'>
            <joint_name>left_up_wheel_link_joint</joint_name>
            <joint_name>left_down_wheel_link_joint</joint_name>
            <joint_name>right_up_wheel_link_joint</joint_name>
            <joint_name>right_down_wheel_link_joint</joint_name>
            <joint_name>right_down_wheel_link_joint</joint_name>
            <joint_name>pt_base_link_to_pt_link1</joint_name>
            <joint_name>pt_link1_to_pt_link2</joint_name>
            <joint_name>left_up_sim_wheel_joint</joint_name>
            <joint_name>right_up_sim_wheel_joint</joint_name>
            <joint_name>left_down_sim_wheel_joint</joint_name>
            <joint_name>right_down_sim_wheel_joint</joint_name>
            <topic>joint_states</topic>
            <update_rate>30</update_rate>
        </plugin>
    </gazebo>





  <link
    name="left_down_sim_wheel_link">
